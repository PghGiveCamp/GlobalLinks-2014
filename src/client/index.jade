doctype html5
html(lang='en', ng-app='globallinks')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')

    title GlobalLinks Volunteer Portal

    link(rel='stylesheet', href='/vendors.css')

    link(rel='stylesheet', href='/all.css')

    script(src="/vendors.js")

  body(ng-controller='mainCtrl')
    .container-full#header
      .container
        .row
          .image-wrapper.col-md-4.vcenter
            img(src="/assets/images/gl-logo.png").logo
          .quote-wrapper.col-md-6.col-md-offset-2.vcenter.hidden-xs 
            span.vcenter.push-right.quote(
              ng-model='selectedQuote.quote'
            ) "{{ selectedQuote.quote }}" &nbsp; &nbsp; ~{{ selectedQuote.name }}
    .container-full
      nav.navbar.navbar-default.navbar-inverse(role="navigation")
        .container
          .navbar-header
            button.navbar-toggle.collapsed(
              type="button"
              data-toggle="collapse"
              data-target=".navbar-collapse"
            )
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            span.navbar-brand Volunteer Portal
          .navbar-collapse.collapse
            ul.nav.navbar-nav
              li(
                ng-class="{ active: isActive('/contact')}"
              )
                a(
                  ng-if="auth.isLoggedIn()"
                  ui-sref='contact'
                ) Profile
              li(
                ng-class="{ active: isActive('/checkin')}"
              )
                a(
                  ng-if="auth.isLoggedIn()"
                  ui-sref='checkin'
                ) Check-in
            ul.nav.navbar-nav.navbar-right
              li(
                ng-class="{ active: isActive('/auth/login')}"
              )
                a(
                  ng-if="!auth.isLoggedIn()"
                  ui-sref='auth.login'
                ) Login
                a(
                  ng-if="auth.isLoggedIn()"
                  ui-sref='auth.login'
                  ng-click='auth.logout()'
                ) Logout

      ui-view.slide-left-right(name="main")

    script(src="/templates.js")
    script(src="/application.js")
